{
  "openapi": "3.0.1",
  "info": {
    "title": "AdvertisingPlatforms",
    "version": "1.0"
  },
  "paths": {
    "/api/advertising/upload": {
      "post": {
        "tags": [
          "Advertising"
        ],
        "summary": "Загружает данные о рекламных площадках из файла.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "file": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/advertising/platforms": {
      "get": {
        "tags": [
          "Advertising"
        ],
        "summary": "Возвращает список рекламных площадок, действующих в указанной локации и её родителях.",
        "parameters": [
          {
            "name": "location",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": { }
}